{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "./out",
    "sourceMap": true,
    "strict": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test", "dist"]
}

{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "./out",
    "sourceMap": true,
    "strict": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/types": ["types/index"],
      "@/types/*": ["types/*"],
      "@/services/*": ["services/*"],
      "@/managers/*": ["managers/*"],
      "@/commands/*": ["commands/*"],
      "@/utils/*": ["utils/*"],
      "@/constants": ["constants/index"],
      "@/constants/*": ["constants/*"],
      "@/providers/*": ["providers/*"],
      "@/templates": ["templates/index"],
      "@/templates/*": ["templates/*"],
      "@/logger": ["logger"]
    }
  },
  "include": ["src/**/*", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "dist",
    "out",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

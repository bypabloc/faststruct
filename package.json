{
	"name": "faststruct",
	"displayName": "FastStruct",
	"description": "VSCode extension to quickly create project structures",
	"version": "0.0.3",
	"publisher": "the-full-stack",
	"author": {
		"name": "Pablo Contreras"
	},
	"engines": {
		"vscode": "^1.94.0"
	},
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/bypabloc/faststruct"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:faststruct.createStructure",
		"onCommand:faststruct.createStructureContext"
	],
	"main": "./out/main.js",
	"contributes": {
		"commands": [
			{
				"command": "faststruct.createStructure",
				"title": "Create Project Structure",
				"category": "FastStruct"
			},
			{
				"command": "faststruct.createStructureContext",
				"title": "Create Project Structure Here",
				"category": "FastStruct"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "faststruct.createStructureContext",
					"group": "2_workspace"
				}
			]
		},
		"configuration": {
			"title": "FastStruct",
			"properties": {
				"faststruct.exclude": {
					"type": "object",
					"default": {
						"folders": [
							"node_modules",
							".git",
							"dist",
							"build"
						],
						"files": [
							"*.log",
							"*.lock",
							"package-lock.json"
						]
					},
					"description": "Patterns to exclude from the structure tree",
					"properties": {
						"folders": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Folders to exclude"
						},
						"files": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "File patterns to exclude"
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"npm:install": "rm -rf node_modules && rm -rf dist && npm cache clean --force && npm install",
		"npm:reinstall": "rm -rf node_modules && rm -rf dist && rm -rf .nuxt && rm -f package-lock.json && npm cache clean --force && npm install"
	},
	"devDependencies": {
		"@types/minimatch": "^5.1.2",
		"@types/node": "^16.18.115",
		"@types/vscode": "^1.94.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.57.1",
		"typescript": "^5.6.3"
	}
}
